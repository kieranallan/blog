<h1>New Accommodation</h1>

<%= form_with model: @accommodation do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @accommodation.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
    <% @accommodation.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :persons %><br>
    <%= form.number_field :persons %>
    <% @accommodation.errors.full_messages_for(:persons).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
